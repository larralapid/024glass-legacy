<div class="template_reset_account">
	<h1 class="page_heading">{{ page_title }}</h1>

	<div id="account_section__reset-account" class="account_section container-sm">
		<h4 class="mb-4">{{ 'customer.reset_account.title' | t }} {{ email }}</h4>

		{% form 'reset_customer_password' %}
			{{ form.errors | default_errors }}

			<div class="form-group row">
				<div class="col-12 text-left">
					<label for="password_2">{{ 'customer.reset_account.password' | t }}</label>
				</div>
				<div class="form-control-content col-12">
					<input type="password" name="customer[password]" id="password_1" class="form-control">
				</div>
			</div>

			<div class="form-group row">
				<div class="col-12 text-left">
					<label for="password_2">{{ 'customer.reset_account.confirm_password' | t }}</label>
				</div>
				<div class="form-control-content col-12">
					<input type="password" name="customer[password_confirmation]" id="password_1" class="form-control">
				</div>
			</div>

			<div class="form-group">
				<button type="submit" class="btn btn-default">{{ 'customer.reset_account.submit' | t }}</button>
			</div>
		{% endform %}
	</div>
</div>

<script>
	theme.loginForms = true;
</script>