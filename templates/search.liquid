							<div class="product_item">
								{% if item.featured_image %}
									<a class="search_results__img search_results_product" href="{{ item.url }}">
										<img class="img-fluid w-100" src="{{ item.featured_image.src | img_url: '196x244', crop: 'center'}}" alt="{{ item.featured_image.alt | escape }}">
