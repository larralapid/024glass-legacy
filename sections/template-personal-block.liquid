	"name": "Personal block",
	"class": "section section_homepage section_personal",
	"max_blocks": 12,
	"settings": [
		{
			"type": "header",
			"content": "Personal Block"
		},
		{
			"type": "checkbox",
			"id": "background_toggle",
			"label": "Show background color",
			"default": false
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color",
			"default": "#F6F7F9"
		},
		{
			"type": "text",
			"id": "section_title",
			"label": "Section Title"
		},
		{
			"type": "checkbox",
			"id": "container_view",
			"label": "Use container",
			"default":   false
		},
		{
		"type":      "select",
		"id":        "container_settings",
		"label":     "Container width",
			"options": [
				{
					"value": "container",
					"label": "Container"
				},
				{
					"value": "container-xl",
					"label": "Container xl"
				}
			],
			"default":   "container",
			"info":      "If use container"
		},
		{
			"type": "checkbox",
			"id": "social_menu",
			"label": "Show social menu",
			"default": true
		}
	],
	"blocks": [
		{
			"type": "block_item",
			"name": "Personal infoblock",
			"settings": [
				{
					"type": "image_picker",
					"id": "item_img",
					"label":"Image item"
				},
				{
					"type": "richtext",
