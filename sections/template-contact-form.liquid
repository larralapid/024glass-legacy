<div class="contact_item item_form mb-lg-5">
	<div>
		<h4>{{ section.settings.item_form_title }}</h4>
		<p>{{ section.settings.item_form_text }}</p>
	</div>
	{% form 'contact' %}
		{% if form.posted_successfully? %}
			<p class="alert alert-success">{{ 'pages.contact_page_form.submit_success' | t }}</p>
		{% endif %}

		{{ form.errors | default_errors }}
		<div class="row mt-2">
			<div class="col-12">
				<div class="form-group row">
					<div class="col-12 text-left">
						<label for="contact_form__name">{{ 'pages.contact_page_form.name' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input required type="text" id="contact_form__name" name="contact[name]" class="form-control" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="{{ 'pages.contact_page_form.name' | t }}">
					</div>
				</div>
			</div>
			<div class="col-12">
				<div class="form-group row">
					<div class="col-12 text-left">
						<label for="contact_form__email">{{ 'pages.contact_page_form.email' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input required type="email" id="contact_form__email" name="contact[email]" class="form-control" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ csustomer.email }}{% endif %}" placeholder="{{ 'pages.contact_page_form.email' | t }}">
					</div>
				</div>
			</div>
			<div class="col-12">
				<div class="form-group row">
					<div class="col-12 text-left">
						<label for="contact_form__message">{{ 'pages.contact_page_form.message' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<textarea required id="contact_form__message" name="contact[body]" class="form-control" placeholder="{{ 'pages.contact_page_form.message' | t }}">{% if form.body %}{{ form.body }}{% endif %}</textarea>
					</div>
				</div>
			</div>
		</div>
		<div class="form-group-btn">
			<button class="btn btn-primary w-100" type="submit">{{ 'pages.contact_page_form.submit' | t }}</button>
		</div>
	{% endform %}
</div>

{% schema %}
{
	"name": "Contact form",
	"class": "section section_template__contact_form",
	"settings": [
		
		{
			"type": "header",
			"content": "Contact form"
		},
		{
			"type": "text",
			"id": "item_form_title",
			"label": "Contact form title"
		},
		{
			"type": "textarea",
			"id": "item_form_text",
			"label": "Contact form text"
		}
	]
}
{% endschema %}