<div class="template_customer template_customer__account">
	<div class="page_heading custom_page_heading">
		{{ 'customer.account.title' | t }}, {{ customer.name }}
		{% comment %}<a class="link_logout" href="/account/logout">{{ 'customer.account.logout' | t }}</a>{% endcomment %}
		{% if section.settings.welcome_text != blank %}
			<p class="text">{{ section.settings.welcome_text }}</p>
		{% endif %}
	</div>
	<div id="account_customer__wrapper" class="mt-6">
		<div class="customer_wrapper row justify-content-center">
			<div class="col-6 col-md-4 mb-3">
				<a href="#" id="customer_account__info" class="customer_block customer_block__info">
					<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M19.9996 28.334C26.1029 28.334 31.4413 30.959 34.3446 34.8757L31.2746 36.3273C28.9112 33.5273 24.7446 31.6673 19.9996 31.6673C15.2546 31.6673 11.0879 33.5273 8.72458 36.3273L5.65625 34.874C8.55958 30.9573 13.8963 28.334 19.9996 28.334ZM19.9996 3.33398C22.2097 3.33398 24.3293 4.21196 25.8921 5.77476C27.4549 7.33756 28.3329 9.45718 28.3329 11.6673V16.6673C28.3328 18.8148 27.5037 20.8793 26.0185 22.4303C24.5333 23.9813 22.5067 24.8991 20.3613 24.9923L19.9996 25.0007C17.7894 25.0007 15.6698 24.1227 14.107 22.5599C12.5442 20.9971 11.6663 18.8775 11.6663 16.6673V11.6673C11.6664 9.51988 12.4955 7.45538 13.9807 5.90436C15.4659 4.35333 17.4925 3.43552 19.6379 3.34232L19.9996 3.33398ZM19.9996 6.66732C18.7242 6.66725 17.4971 7.15453 16.5691 8.02946C15.6412 8.90439 15.0827 10.1008 15.0079 11.374L14.9996 11.6673V16.6673C14.9983 17.9688 15.5046 19.2195 16.4109 20.1537C17.3171 21.0878 18.5519 21.6318 19.8529 21.67C21.1538 21.7082 22.4184 21.2376 23.3779 20.3582C24.3374 19.4788 24.9161 18.26 24.9913 16.9607L24.9996 16.6673V11.6673C24.9996 10.3412 24.4728 9.06947 23.5351 8.13178C22.5974 7.1941 21.3257 6.66732 19.9996 6.66732Z" fill="#121212"/>
					</svg>
					<h5>{{ 'customer.account.account_info_title' | t }}</h5>
				</a>
			</div>
			<div class="col-6 col-md-4 mb-3">
				{% if customer.orders.size == 0 %}
					<div id="customer_account__order" class="customer_block customer_block__order noactive">
				{% else %}
					<a id="customer_account__order" href="/account/orders" class="customer_block customer_block__order">
				{% endif %}
						<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M19.9997 36.6673C10.7947 36.6673 3.33301 29.2057 3.33301 20.0007C3.33301 10.7957 10.7947 3.33398 19.9997 3.33398C29.2047 3.33398 36.6663 10.7957 36.6663 20.0007C36.6663 29.2057 29.2047 36.6673 19.9997 36.6673ZM19.9997 33.334C23.5359 33.334 26.9273 31.9292 29.4278 29.4287C31.9283 26.9283 33.333 23.5369 33.333 20.0007C33.333 16.4644 31.9283 13.073 29.4278 10.5726C26.9273 8.07208 23.5359 6.66732 19.9997 6.66732C16.4635 6.66732 13.0721 8.07208 10.5716 10.5726C8.0711 13.073 6.66634 16.4644 6.66634 20.0007C6.66634 23.5369 8.0711 26.9283 10.5716 29.4287C13.0721 31.9292 16.4635 33.334 19.9997 33.334ZM18.338 26.6673L11.2663 19.5957L13.623 17.239L18.338 21.954L27.7647 12.5257L30.123 14.8823L18.338 26.6673Z" fill="#121212"/>
						</svg>
						<h5>{% if customer.orders.size == 0 %}{{ 'customer.account.account_is_orders' | t }} {% else %}{{ 'customer.account.account_info_orders' | t }}{% endif %}</h5>
				{% if customer.orders.size == 0 %}
					</div>
				{% else %}
					</a>
				{% endif %}
			</div>
			<div class="col-6 col-md-4 mb-3">
				<a href="/account/logout" class="customer_block customer_block__reset">
					<svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
						<path d="M30.6667 33.3327L30.6667 6.66601L19 6.66601L19 3.33268L32.3333 3.33268C32.7754 3.33268 33.1993 3.50827 33.5118 3.82083C33.8244 4.13339 34 4.55732 34 4.99935L34 34.9993C34 35.4414 33.8244 35.8653 33.5118 36.1779C33.1993 36.4904 32.7754 36.666 32.3333 36.666L19 36.666L19 33.3327L30.6667 33.3327ZM14 18.3327L25.6667 18.3327L25.6667 21.666L14 21.666L14 29.9993L4 19.9993L14 9.99935L14 18.3327Z" fill="#121212"/>
					</svg>
					<h5>{{ 'customer.account.logout' | t }}</h5>
				</a>
			</div>
		</div>
	</div>

	{% comment %} ACCOUNT INFO {% endcomment %}
	<div id="account_section__info" class="account_section account_section__info mt-6">
		<div class="customer_item_wrap container-sm container-sm-570">

			<h4 class="my-3">{{ 'customer.account.account_info_title' | t }}</h4>

			<div class="account_table__info">
				<div class="form-group row">
					<div class="col-12 text-left">
						<label>{{ 'customer.account.account_info_name' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input type="text" readonly value='{{ customer.name }}' class="form-control">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-12 text-left">
						<label>{{ 'customer.account.account_info_email' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input type="text" readonly value='{{ customer.email }}' class="form-control">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-12 text-left">
						<label>{{ 'customer.account.account_info_orders' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input type="text" readonly value='{{ customer.orders | size }}' class="form-control">
					</div>
				</div>

				<div class="form-group row">
					<div class="col-12 text-left">
						<label>{{ 'customer.account.account_info_total_spent' | t }}</label>
					</div>
					<div class="form-control-content col-12">
						<input type="text" readonly value='{{ customer.total_spent | money | strip_html }}' class="form-control">
					</div>
				</div>
			</div>

			<div class="account_table__default mt-4">
				<h4 class="close-wrapper mb-3">{{ 'customer.account.account_addresses_title' | t }}
					<a class="link_edit" href="/account/addresses" title="{{ 'customer.account.account_addresses_manage' | t }}">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M6.414 16.0001L16.556 5.85808L15.142 4.44408L5 14.5861V16.0001H6.414ZM7.243 18.0001H3V13.7571L14.435 2.32208C14.6225 2.13461 14.8768 2.0293 15.142 2.0293C15.4072 2.0293 15.6615 2.13461 15.849 2.32208L18.678 5.15108C18.8655 5.33861 18.9708 5.59292 18.9708 5.85808C18.9708 6.12325 18.8655 6.37756 18.678 6.56508L7.243 18.0001ZM3 20.0001H21V22.0001H3V20.0001Z" fill="#121212"/>
						</svg>
					</a>
				</h4>

				{% if customer.default_address == nil %}
					<div class="form-group row">
						<div class="col-12 text-left">
							<label>Address</label>
						</div>
						<div class="form-control-content col-12">
							<input type="text" readonly value='{{ 'customer.account.account_addresses_default_empty' | t }}' class="form-control">
						</div>
					</div>
				{% else %}
					{% if customer.default_address.name.size > 0 %}
						<div class="form-group row">
							<div class="col-12 text-left">
								<label>{{ 'customer.register_form.first_name' | t }}</label>
							</div>
							<div class="form-control-content col-12">
								<input type="text" readonly value='{{ customer.default_address.name }}' class="form-control">
							</div>
						</div>
					{% endif %}

					<div class="form-group row">
						<div class="col-12 text-left">
							<label>Address</label>
						</div>
						<div class="form-control-content col-12">
							<input type="text" readonly class="form-control" value='{% if customer.default_address.address1.size > 0 %} {{ customer.default_address.address1 }} {% endif %}{% if customer.default_address.address2.size > 0 %} {{ customer.default_address.address2 }} {% endif %}{% if customer.default_address.city.size > 0 %} {{ customer.default_address.city }} {% endif %}{% if customer.default_address.province.size > 0 %} {{ customer.default_address.province }} {% endif %}{% if customer.default_address.zip.size > 0 %} {{ customer.default_address.zip }} {% endif %}{% if customer.default_address.country.size > 0 %} {{ customer.default_address.country }} {% endif %}'>
						</div>
					</div>

					<div class="form-group row">
						<div class="col-12 text-left">
							<label>{{ 'customer.register_form.first_name' | t }}</label>
						</div>
						<div class="form-control-content col-12">
							<input type="text" readonly class="form-control" value='{{ customer.default_address.name }}'>
						</div>
					</div>

					{% if customer.default_address.phone.size > 0 %}
						<div class="form-group row">
							<div class="col-12 text-left">
								<label>{{ 'customer.addresses.form_phone' | t }}</label>
							</div>
							<div class="form-control-content col-12">
								<input type="text" readonly class="form-control" value='{{ customer.default_address.phone }}'>
							</div>
						</div>
					{% endif %}
				{% endif %}
			</div>
			
		</div>
		
			<a class="link_close account_account__close link mt-4" href="#" title="{{ 'customer.register_form.close' | t }}">
				<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
					<path d="M7.828 11.0007L13.192 5.63666L11.778 4.22266L4 12.0007L11.778 19.7787L13.192 18.3647L7.828 13.0007H20V11.0007H7.828Z" fill="#797B7E"/>
				</svg>
				<span>{{ 'customer.addresses.back_to_account' | t }}</span>
			</a>
		
	</div>


	{% comment %} ORDER INFO {% endcomment %}
	<div id="account_section__orders" class="account_section account_section__order mt-6">
		<div class="customer_orders_wrap">
			<h4 class="close-wrapper mb-3">{{ 'customer.account.account_orders_title' | t }}</h4>
			{% if customer.orders.size == 0 %}
				<p class="note">{{ 'customer.account.account_orders_none' | t }}</p>
			{% else %}
				<div class="account_table__wrap order-wrapper my-3">
					<div class="account_order">
						<div class="table-row table-row-head mb-0 d-none d-md-flex">
							<div class="table-cell order-title"><span>{{ 'customer.account.account_orders_order_number' | t }}</span></div>
							<div class="table-cell order-date"><span>{{ 'customer.account.account_orders_date' | t }}</span></div>
							<div class="table-cell order-price"><span>{{ 'customer.account.account_orders_total' | t }}</span></div>
							<div class="table-cell order-payment"><span>{{ 'customer.account.account_orders_payment_status' | t }}</span></div>
							<div class="table-cell order-status"><span>{{ 'customer.account.account_orders_fulfillment_status' | t }}</span></div>
						</div>

						{% for order in customer.orders %}
							<div class="table-row table-labeled mb-3 mb-md-0{% if order.cancelled %} order_cancelled{% endif %}">
								<div class="table-cell order-title">
									<div class="table-cell-heading d-md-none">
										<span>{{ 'customer.account.account_orders_order_number' | t }}</span>
									</div>
									<div class="table-cell-content">
										<span>{{ order.name | link_to: order.customer_url }}</span>
									</div>
								</div>
								<div class="table-cell order-date">
									<div class="table-cell-heading d-md-none">
										<span>{{ 'customer.account.account_orders_date' | t }}</span>
									</div>
									<div class="table-cell-content">
										{{ order.created_at | date: "%b %d, %Y" }}
									</div>
								</div>
								<div class="table-cell order-price">
									<div class="table-cell-heading d-md-none">
										<span>{{ 'customer.account.account_orders_total' | t }}</span>
									</div>
									<div class="table-cell-content">
										<span>{{ order.total_price | money }}</span>
									</div>
								</div>
								<div class="table-cell order-payment">
									<div class="table-cell-heading d-md-none">
										<span>{{ 'customer.account.account_orders_payment_status' | t }}</span>
									</div>
									<div class="table-cell-content">
										{{ order.financial_status }}
									</div>
								</div>
								<div class="table-cell order-status">
									<div class="table-cell-heading d-md-none">
										<span>{{ 'customer.account.account_orders_fulfillment_status' | t }}</span>
									</div>
									<div class="table-cell-content">
										 <span class="label{% if order.fulfillment_status == 'unfulfilled' %} label-unfulfilled{% elsif order.fulfillment_status == 'shipped' %} label-shipped{% elsif order.fulfillment_status == 'partial' %} label-partial{% elsif order.fulfillment_status == 'unshipped' %} label-unshipped{% else %} label-any{% endif %}">
											{{ order.fulfillment_status }}
										</span>
									</div>
								</div>
							</div>
						{% endfor %}
					</div>
				</div>
			{% endif %}
		</div>
		<a class="link_close account_order__close link mt-4" href="#" title="{{ 'customer.register_form.close' | t }}">
			<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M7.828 11.0007L13.192 5.63666L11.778 4.22266L4 12.0007L11.778 19.7787L13.192 18.3647L7.828 13.0007H20V11.0007H7.828Z" fill="#797B7E"/>
			</svg>
			<span>{{ 'customer.addresses.back_to_account' | t }}</span>
		</a>
	</div>
</div>

{% schema %}
{
	"name": "Account",
	"settings": [
		{
			"type": "header",
			"content": "Welcome block"
		},
		{
			"type": "textarea",
			"id": "welcome_text",
			"label": "Welcome text"
		}
	]
}
{% endschema %}

{% javascript %}
jQuery(document).ready(function($) {

	var section_wrapper = $('#account_customer__wrapper');
	var section_info = $('#account_section__info');
	var section_orders = $('#account_section__orders');

	// INFO
	$('#customer_account__info').on('click', function(e) {
		e.preventDefault();
		section_wrapper.fadeOut(200);
		section_info.fadeIn(200);
	});
	$('.account_account__close').on('click', function(e) {
		e.preventDefault();
		section_info.fadeOut(200);
		section_wrapper.fadeIn(200);
		section_wrapper.scrollTop(0);
		
	});

	
	// ORDERS
	$('#customer_account__order').on('click', function(e) {
		e.preventDefault();
		section_wrapper.fadeOut(200);
		section_orders.fadeIn(200);
	});
	$('.account_order__close').on('click', function(e) {
		e.preventDefault();
		section_orders.fadeOut(200);
		section_wrapper.fadeIn(200);
		section_wrapper.scrollTop(0);
	});




});
{% endjavascript %}