{%- assign selector_currency = section.settings -%}

<header id="page_header" class="header_layout_4 header_layout_common">

	<div class="header-top d-none d-xl-block">
		<div class="container container-xl">
			<div class="col-12 d-none d-xl-flex justify-content-center">
				<div class="block-logo mb-xl-3" data-responsive-id="logo-shop" data-responsive-layout="desktop">
					<div class="{% if section.settings.logo_slogan.size > 0 %}slogan-on {% endif %} {% if section.settings.logo_type == 'img' %} logo-image{% else %} logo-txt{% endif %}">
						{% if section.settings.logo_slogan.size > 0 %}
							{% assign logo_slogan = section.settings.logo_slogan | prepend:'<div class="logo_slogan">' | append:'</div>' %}
						{% endif %}
						{% assign logo_width = section.settings.logo_width %}
						{% assign logo_type = section.settings.logo_type %}
						{% assign logo_i = section.settings.logo_main %}
						{% assign logo_src = section.settings.logo_main | img_url: logo_size, crop:'center', scale: 2 %}
						
						{% include 'logo' slogan: logo_slogan, logo_t: logo_type, logo_image: section.settings.logo_main, max_w: logo_width, src: logo_src %}
					</div>
				</div>
			</div>
			<div id="pseudo_sticky_block"></div>
			<div class="row align-items-xl-center stickUpHeader">
				<div class="col-3">
					{%- assign currency = selector_currency.supported_currencies | split: '|' -%}
					{%- if currency.size > 1 and selector_currency.use_currency_selector  -%}
						<div id="js-currency-switcher" class="currency-selector-box currency-selector-box__right" data-responsive-id="currency-selector" data-responsive-layout="desktop">
							<div id="currency_active">
								{%- for value in currency -%}
									{%- assign array = value | split: ',' -%}
									{%- assign iso_4217 = array[0] | upcase | strip -%}
									{%- assign name = array[1] | strip -%}
									{% if iso_4217 == shop.currency %}
										<span class="cur-text">{{ name }}</span>
									{% endif %}
								{%- endfor -%}
							</div>
							<div class="currency_selector">
								{%- include "selector-currency" -%}
							</div>
						
						</div>
					{%- endif -%}
				</div>
				<div class="col position-static d-flex justify-content-center align-items-center">
					<div class=" d-none d-xl-block">
						{% if section.settings.megamenu_toggle %}
							<div data-responsive-id="megamenu" data-responsive-layout="desktop">
								{% include 'main-megamenu' %}
							</div>
						{% endif %}
					</div>
				</div>
				<div class="col-auto col-xl-3 d-flex justify-content-end align-items-center position-static">
					{% if shop.customer_accounts_enabled and section.settings.header_user %}
						<div class="header_account ml-xl-3  {% if customer %} header_account_customer{% endif %}" data-responsive-id="header-account" data-responsive-layout="desktop">
							<a href="{{ routes.account_url }}" title="{{ 'layout.header.my_account' | t }}">
									<span class="d-flex align-items-center">
										<span class="link_text">
											{% if customer %}
												{{ 'customer.account.title' | t }}
											{% else %}
												{{ 'layout.header.my_account' | t }}
											{% endif %}
										</span>
										{% if customer %}
											<span class="user-name">{{ customer.name }}</span>
										{% endif %}
									</span>
								<svg class="ml-xl-1 d-xl-none svg-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path d="M12 17.0001C15.662 17.0001 18.865 18.5751 20.607 20.9251L18.765 21.7961C17.347 20.1161 14.847 19.0001 12 19.0001C9.15304 19.0001 6.65304 20.1161 5.23504 21.7961L3.39404 20.9241C5.13604 18.5741 8.33804 17.0001 12 17.0001ZM12 2.00006C13.3261 2.00006 14.5979 2.52685 15.5356 3.46453C16.4733 4.40221 17 5.67398 17 7.00006V10.0001C17 11.2885 16.5025 12.5272 15.6114 13.4578C14.7203 14.3885 13.5043 14.9391 12.217 14.9951L12 15.0001C10.674 15.0001 9.40219 14.4733 8.46451 13.5356C7.52683 12.5979 7.00004 11.3261 7.00004 10.0001V7.00006C7.00012 5.7116 7.49758 4.4729 8.3887 3.54228C9.27982 2.61167 10.4958 2.06098 11.783 2.00506L12 2.00006ZM12 4.00006C11.2348 4.00002 10.4985 4.29239 9.94178 4.81734C9.38504 5.3423 9.04994 6.06017 9.00504 6.82406L9.00004 7.00006V10.0001C8.99929 10.781 9.30306 11.5314 9.84681 12.0919C10.3906 12.6524 11.1314 12.9787 11.912 13.0017C12.6926 13.0246 13.4513 12.7422 14.027 12.2146C14.6027 11.687 14.95 10.9557 14.995 10.1761L15 10.0001V7.00006C15 6.20441 14.684 5.44135 14.1214 4.87874C13.5588 4.31613 12.7957 4.00006 12 4.00006Z" />
								</svg>
							</a>
						</div>
					{% endif %}
					
					
					{% if section.settings.header_search %}
						<div class="d-none ml-xl-3 d-xl-block" data-responsive-id="header-search" data-responsive-layout="desktop">
							{% include 'header-search' %}
						</div>
					{% endif %}
					
				
					
					{% if shop.customer_accounts_enabled and settings.wishlist_toggle == true and settings.wishlist_page != '' %}
							{% assign zemez_wishlist = customer.metafields.zemez_modules.wishlist %}
							<div class="header_wishlist ml-xl-3" data-responsive-id="wishlist" data-responsive-layout="desktop">
								<a class="wishlist-link" href="{{ pages[settings.wishlist_page].url }}" title="{{ 'layout.wishlist.wishlist' | t }}">
									<svg class="wishlist-icon svg-icon" width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M12.001 4.52894C13.1436 3.50614 14.6345 2.95981 16.1674 3.00221C17.7003 3.04462 19.1587 3.67254 20.243 4.75694C21.3264 5.84013 21.9543 7.29669 21.9982 8.82803C22.0421 10.3594 21.4986 11.8495 20.479 12.9929L11.999 21.4849L3.52102 12.9929C2.50028 11.8489 1.95623 10.3575 2.00056 8.82492C2.04489 7.29235 2.67425 5.83489 3.75942 4.75177C4.84459 3.66865 6.30323 3.04205 7.83589 3.00061C9.36854 2.95917 10.8589 3.50604 12.001 4.52894ZM18.827 6.16994C18.1046 5.44807 17.1333 5.03002 16.1125 5.00157C15.0916 4.97312 14.0985 5.33642 13.337 6.01694L12.002 7.21494L10.666 6.01794C9.90406 5.33661 8.91013 4.97291 7.88837 5.00155C6.86662 5.03019 5.89462 5.44899 5.17202 6.17194C4.45628 6.88764 4.03848 7.84808 4.00285 8.85964C3.96722 9.8712 4.31641 10.8587 4.98002 11.6229L12 18.6539L19.02 11.6239C19.6844 10.8593 20.0339 9.87118 19.9981 8.85891C19.9623 7.84665 19.5438 6.88566 18.827 6.16994Z" />
									</svg>
									<span class="link_text d-xl-none ml-1">{{ 'layout.wishlist.wishlist' | t }}</span>
									<span class="zemez_wishlist_total {% unless zemez_wishlist.size > 0 %} hidden{% endunless %}">{{ zemez_wishlist.size }}</span>
								</a>
							</div>
						{% endif %}
						{% if section.settings.header_cart %}
							<div class="ml-xl-3" data-responsive-id="shopping-cart" data-responsive-layout="desktop">
								{%- assign ajax_cart = section.settings.ajax_cart -%}
								{% include 'header-cart' ajax: ajax_cart, style: 'type_2' %}
							</div>
						{% endif %}
					</div>
			</div>
		</div>
	</div>
	<div class="header-bottom">
		<div class="container">
			<ul class="txt-linklist">
				{% if section.settings.top_panel_text.size > 0 or section.settings.top_panel_link.size > 0 %}
					<li class="text-center">
						{% if section.settings.top_palink.size > 0 %}
						<a class="link_inverted" href="{{ section.settings.top_panel_link }}">
						{% else %}
							<span>
						{% endif %}
							{{ section.settings.top_panel_text }}
						{% if section.settings.top_panel_link.size > 0 %}
