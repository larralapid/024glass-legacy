		}
	]
}
{% endschema %}

{% javascript %}
jQuery(document).ready(function($) {
	$('.testimonials_slider').each(function() {
		var pagination = '#' + $(this).attr('id').replace('testimonials_','pagination_');

		var testimonialSlider = new Swiper( '#' + $(this).attr('id'), {
			slidesPerView: 1,
			grabCursor: true,
			pagination: {
				el: pagination,
				clickable: true
			}
		});	
	});
});
{% endjavascript %}
	

