{% if section.settings.background_toggle %}
	<div style="background-color: {{ section.settings.bg_color }}" class="bg-section">
{% endif %}

{% if section.settings.container_view %}
	<div class="{% if section.settings.container_settings == 'container' %}container{% elsif section.settings.container_settings == 'container-xl' %} container container-xxl{% endif %}">
{% endif %}

<div class="row">
	<div class="col-12 text-center">
		{% if section.settings.heading_section.size > 0 %}
			<p class="section_heading h3 mb-0">{{ section.settings.heading_section }}</p>
		{% endif %}
		{% if section.settings.subheading.size > 0 %}
			<p class="subtext mt-1">{{ section.settings.subheading }}</p>
		{% endif %}
	</div>
	<div class="col-12 mt-xl-2">
		<div class="row counter-wrapper justify-content-between">
					{% for block in section.blocks %}
						<div class="col-6 col-md-auto">
							{% case block.type %}
								{% when 'item' %}
									{% if block.settings.number.size > 0 or block.settings.title.size > 0 %}
										<div class="counter-boxed">
											{% if block.settings.number.size > 0 %}
												<div class="counter-value">{{ block.settings.number }}</div>
											{% endif %}
											{% if block.settings.title.size > 0 %}
												<p class="counter-title">{{ block.settings.title }}</p>
											{% endif %}
										</div>
								{% endif %}
							{% endcase %}
						</div>
					{% endfor %}
				</div>
	</div>
</div>

{% if section.settings.container_view %}
	</div>
{% endif %}

{% if section.settings.background_toggle %}
	</div>
{% endif %}

{% schema %}
{
	"name": "Counter section",
	"class": "section section_homepage section_counter",
	"settings": [
		{
			"type": "text",
			"id": "heading_section",
			"label": "Heading",
			"default": "Section title"
		},
		{
			"type": "text",
			"id": "subheading",
			"label": "Subheading",
			"default": "Subheading"
		},
		{
			"type": "checkbox",
			"id": "background_toggle",
			"label": "Show background color",
			"default": false
		},
		{
			"type": "color",
			"id": "bg_color",
			"label": "Background color",
			"default": "#F6F7F9"
		},
		{
			"type": "checkbox",
			"id": "container_view",
			"label": "Use container",
			"default":   false
		},
		{
			"type":      "select",
			"id":        "container_settings",
			"label":     "Container width",
			"options": [
			{
				"value": "container",
				"label": "Container"
			},
			{
				"value": "container-xl",
				"label": "Container xl"
			}
		],
			"default":   "container",
			"info":      "If use container"
		}
	],
	"blocks": [
		{
			"type": "item",
			"name": "Counter",
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "Title",
					"default": "Counter"
				},
				{
					"type": "text",
					"id": "number",
					"label": "Counter",
					"default": "100"
				}
			]
		}
	],

	"presets": [
		{
			"name": "Counter section",
			"category": "Text",
			"blocks": [
				{
					"type": "item"
				},
				{
					"type": "item"
				}
			]
		}
	]
}
{% endschema %}
